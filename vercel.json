{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/create-payment",
      "destination": "/server.js"
    },
    {
      "source": "/create-preference",
      "destination": "/server.js"
    },
    {
      "source": "/payment-status/:id",
      "destination": "/server.js"
    },
    {
      "source": "/login",
      "destination": "/server.js"
    },
    {
      "source": "/send-email",
      "destination": "/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}